@import "nib"
@import "axis"
@import "jeet"
@import "rupture" //'rupture/index'
@import "underline"

normalize-css()
mypink = #444444 
font-color = #444444 //rgba(0, 0, 0, 0.8)
base-line-height = (font-size * 1.5)
font-size  = 20px
o = #F26936;
head1-color = font-color 
head2-color = #4d4d4d// font-color
base(fonts = blog-font)
typography()
ligatures = true
sdlime =  rgba(205,237,136,100)
text-selection(color = sdlime)
otherblue = rgba(0,10.2,17.3,.78)
inkblue = rgba(15, 117, 150, .78)
inkbluefoot = rgba(15,117,150,1)
tonguered = rgba(170,1,20,100)
rupture.scale = 0 415px 600px 800px 1050px 1280px
rupture.mobile-cutoff = 415px
texture = "/img/first-aid-kit.png"
body
  //background-image url(texture)
  font-family "Source Sans Pro"
  /* 
    these weights are available
    200,300,400,400i,600,700,900
  */
  font-weight 300
  strong, b
    font-weight 400
  color #4d4d4d

.dummy
  color white

.vwrapper
  padding-top 25px
  display flex
  align-items center
  justify-content center

.site
  display flex
  min-height 100vh
  flex-direction column
  height 100%

//.site-content
  //flex 1 0 auto

a, a:hover, a:visited
  reset-link()
  color #4d4d4d

img
  max-width 100%
  height auto
.inliner
  width 60% //do I really want this?
  +mobile()
    display none

#header
  //col(12/12, gutter: 20px)
  span()
  background-color inkbluefoot
  border-bottom 4px solid sdlime 
  #logo
    col(8/12, offset: 2/12, gutter: 10px)
    #title
      font-weight 900
      padding 0
      margin-bottom 0px
      margin-top 6px
      fs((font-size * 2.5))
      upcase()
      a
        color white
      a:hover
        color white
      +mobile()
        font-weight 400
        fs((font-size * 1.33))
      #star
        fs((font-size * 1.5))
        vertical-align bottom
        color white//sdlime
        +mobile()
          fs (font-size * 1.25)

p, li, table, th, td
  font-size font-size

table
  width 75%
  margin-top    font-size * 2 
  margin-bottom font-size * 2 

th, td, tr
  padding (font-size / 4)
  text-align left

table td
  border-bottom 1px solid gray 
  border-top    1px solid gray 

#dog
  center()
  +mobile()
    display none
  +below(5)
    padding: 30px
#theSocial
  col(2/9, offset: 3/4, gutter: 0px)
  p
    text-align right
  +mobile()
    col(4/12, offset: 2/4, gutter: 1px)
    padding 10px
.myicon
  margin-left 5px
  margin-right 5px
#theTweet
  float right
  +mobile()
    display none
#disgustblock
  +mobile()
    display none
#theSlug
  fs(font-size * 1.125)
#theTitle
  //margin-bottom -10px
  fs(font-size * 2.5)
  font-weight 200
  color #4d4d4d
  line-height (font-size * 2)
  margin-bottom 8px
  upcase()
  +below(4)
    line-height 1em
    margin-bottom 0px
  +mobile()
    fs (font-size * 1.33)
    margin-bottom 5px
    upcase()
    margin-top 50px
#topdate
  span(1)
  margin-top -20px
  padding 0 
#md
  span(1)
  margin-right 0px
  margin-top 30px
figure.inliner
  +mobile()
    display none
  margin-left auto
  margin-right auto
  padding 15px
  figcaption
    h4
      //border-top 1px solid gray
      //padding-top 30px
      font-style italic
      text-align center
      fs (font-size * .8725)
      margin-top 0px
    p
      text-align center
      fs (font-size * .8725)
  img
    margin-left auto
    margin-right auto
    padding 0px
blockquote
  border 0
  p
    fs(font-size * .9)

#content, #content_foot
  col(8/12, offset:2/12, gutter: 10px)
  a:not(.no-underline)
    linkUnderlines white, #4d4d4d
  +mobile()
    col(8/12, offset: 1/6, gutter: 10px)
  background rgba(255,255,255,1)
  padding 0px
  //padding-left 14px

#footer
  background inkbluefoot
  //background-image url(texture)
#thefoot
  +mobile()
    span(1)
    padding-left 5px
  col(8/12, offset: 2/12, gutter: 10px)
  padding-bottom 10px
  padding-left 0px
  p
    fs(font-size * .75)
    color white
    bold()
    a
      linkUnderlines inkblue, white 
    +mobile()
      padding-left 20px
code
  font-family "Source Code Pro"
  fs(font-size * .9)
pre > code
  font-family "Source Code Pro"
  fs(font-size * .9)
  border rgba(0,0,0,.1)
  border-radius 2px 3px / 4px 5px
  +mobile()
    fs((font-size / 1.5))

h1
  fs(font-size * 2)
h2
  fs(font-size * 1.67)
  font-weight 300
  color head2-color
  upcase()
  +mobile()
    fs(font-size * 1.2)
    line-height (font-size * 1.4)
h3
  font-weight 300
  fs(font-size * 1.45)
  upcase()
h4
  fs(font-size * 1.25)
  font-weight 300
  upcase()
h5,h6
  fs(font-size * 1.125)
  font-weight 200
  upcase()
.inline
  inline-list()
h1#archivetitle
  fs(font-size * 2)
  font-weight 300
  upcase()
#butt
  span(1)
  margin-bottom 30px
  div
    +mobile()
      display none
    col(1/3, cycle: 3, gutter: 1)
    #slugdate
      upcase()
div#socialFoot
  #theSocial
     span(1)
   +mobile()
     display none
#footer 
  //width: 100%
  height: 90px
#dog
  z-index: 1000
  position relative
.footrule
  col(8/12, offset:1/5, gutter: 20px)
  margin-bottom 10px
  color mypink
.iconmelon, .im
  position: relative
  width: 32px
  height: 32px
  fill: inkblue

.iconmelon:after, .im:after
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;

.no-underline
  color #4d4d4d

.media
  display: flex
  align-items: flex-start

.media-figure 
  margin-right: 1em

.media-body
  flex: 1
.frontslug
  upcase()
  margin-top 0px
  +mobile()
    fs(font-size * .6)
    font-weight 400
h3.post-title
  upcase()
  color #4d4d4d
  margin-bottom -4px
  +mobile()
    line-height (font-size * .75)
    font-weight 400
    a
      color #4d4d4d
      fs(font-size * .875)
      line-height (font-size * .75)
#byline
  fs(font-size * 1)
  margin-left 2px
.theAuthor
  color inkblue
  font-weight 600
#theBy
  fs(font-size * .875)
#disqusfeet
  +mobile()
    display none
div#bar
  +mobile()
    display none
  font-size 14px
  margin-top 2px
  margin-bottom 20px
  text-align right
  text-transform uppercase
  a:link, a:visited, a:hover:visited
    reset-link()
    color  otherblue
    font-weight 500
  a:hover
    background sdlime

